<?xml version="1.0" encoding="utf-8"?>


<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_700</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/teal_700</item>
        <item name="dialogCornerRadius">8dp</item>
    </style>

    <style name="CreditCardInputLayoutBoxes" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="InputEditTexts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



</resources>